    <node>
      <id>sdr</id>
      <operator>org.esa.beam.bop.meris.sdr.SdrOp$Spi</operator>
        <sources>
            <l1b>l1b</l1b>
            <brr>brr</brr>
            <aerosol>l2</aerosol>
            <cloud>combinedCloud</cloud>
        </sources>
      <configuration>
          <neuralNetFile>fub_aerosol_16.10.2006.nna</neuralNetFile>
          <validExpression>$brr.l2_flags_p1.F_LANDCONS AND (not ($cloud.combined_cloud.cloud or $cloud.combined_cloud.cloud_edge or $cloud.combined_cloud.cloud_shadow or $cloud.combined_cloud.snow))</validExpression>
